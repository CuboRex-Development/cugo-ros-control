<launch>
  <!-- Set tf -->
  <node pkg="tf" type="static_transform_publisher" name="world_to_map" args="0 0 0 0 0 0 world map 100" />
  <node pkg="tf" type="static_transform_publisher" name="base_footprint_to_base_link" args="0 0 0 0 0 0 base_footprint base_link 100" />

  <!-- Arguments -->
  <arg name="map_file" default="$(find cugo_ros_control)/maps/cuborex_building.yaml"/>
  <arg name="open_rviz" default="true"/>
  <arg name="move_forward_only" default="false"/>

  <!-- Map server -->
  <node pkg="map_server" name="map_server" type="map_server" args="$(arg map_file)"/>

  <!-- EMCL2 -->
  <include file="$(find cugo_ros_control)/launch/navigation/cugo_emcl2.launch"/>

  <!-- move_base -->
  <include file="$(find cugo_ros_control)/launch/navigation/cugo_move_base.launch">
    <arg name="move_forward_only" value="$(arg move_forward_only)"/>
  </include>

  <!-- rviz -->
  <group if="$(arg open_rviz)">
    <node pkg="rviz" type="rviz" name="rviz" required="true"
          args="-d $(find cugo_ros_control)/rviz/cugo_navigation.rviz"/>
  </group>

</launch>
